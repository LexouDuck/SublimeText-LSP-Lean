{
  "contributions": {
    "settings": [
      {
        "file_patterns": [
          "/LSP-lean.sublime-settings"
        ],
        "schema": {
          "$id": "sublime://settings/LSP-lean",
          "allOf": [
            {
              "$ref": "sublime://settings/LSP-plugin-base"
            },
            {
              "$ref": "sublime://settings/LSP-lean#/definitions/PluginConfig"
            }
          ],
          "definitions": {
            "PluginConfig": {
              "properties": {
                "settings": {
                  "additionalProperties": false,
                  "properties": {
                    "infoview_display_current_goals": {
                      "type": "boolean",
                      "default": true,
                      "description": "Whether or not to display current goal information (the ongoing goal at cursor)"
                    },
                    "infoview_display_expected_type": {
                      "type": "boolean",
                      "default": true,
                      "description": "Whether or not to display expected type information (the type of the subterm at cursor)"
                    },
                    "infoview_display_nogoals": {
                      "type": "boolean",
                      "default": false,
                      "description": "Display \"No goals\" message when cursor is at a position with no goals"
                    },
                    "infoview_mdpopup": {
                      "type": "boolean",
                      "default": true,
                      "description": "Display mode: Use mdpopups (true) or output panel (false)"
                    },
                    "infoview_delay": {
                      "type": "number",
                      "default": 0.1,
                      "description": "How much time (in seconds) to wait before updating the infoview display"
                    },
                    "infoview_syntaxfile": {
                      "type": "string",
                      "default": "Packages/Lean/Lean.sublime-syntax",
                      "description": "The path of the syntax coloring file to use in the infoview display"
                    },
                    "unicode_input_enabled":
                    {
                      "type": "boolean",
                      "default": true,
                      "description": "Enable unicode abbreviation input (e.g., \\alpha → α)"
                    },
                    "unicode_input_leader":
                    {
                      "type": "string",
                      "default": "\\",
                      "description": "Leader character to trigger unicode input (default: backslash)"
                    },
                    "unicode_input_ender":
                    {
                      "type": "string",
                      "default": "\t",
                      "description": "Ending character to complete unicode input (default: tab)"
                    },
                    "unicode_input_eager_replacement":
                    {
                      "type": "boolean",
                      "default": true,
                      "description": "Enable eager replacement when abbreviation is complete. If false, requires Tab to trigger replacement"
                    },
                    "unicode_input_custom_translations":
                    {
                      "type": "object",
                      "default": {},
                      "description": "Custom abbreviation translations (JSON object). Example: {\"foo\": \"☺\"} will make \\foo produce ☺"
                    }
                  }
                }
              }
            }
          }
        }
      },
      {
        "file_patterns": [
          "/*.sublime-project"
        ],
        "schema": {
          "properties": {
            "settings": {
              "properties": {
                "LSP": {
                  "properties": {
                    "LSP-lean": {
                      "$ref": "sublime://settings/LSP-lean#/definitions/PluginConfig"
                    }
                  }
                }
              }
            }
          }
        }
      }
    ]
  }
}